@model EasyHousingSolution.Models.UploadImageViewModel

@{
    ViewData["Title"] = "Upload Images";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h3 class="mb-0">Upload Images for Property</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.PropertyName</h5>
                    <hr />

                    <form asp-action="UploadImages" method="post" enctype="multipart/form-data">

                        @* This will now display all validation errors at the top *@
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        @* This hidden field is essential to post the PropertyId back to the server *@
                        <input type="hidden" asp-for="PropertyId" />

                        <div class="form-group mb-3">
                            <label asp-for="Images" class="form-label"></label>
                            <input asp-for="Images" class="form-control" type="file" multiple />
                            <span asp-validation-for="Images" class="text-danger"></span>
                            <small class="form-text text-muted">You can select up to 6 images.</small>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-upload"></i> Upload</button>
                            <a asp-action="Dashboard" class="btn btn-secondary">I'll do this later</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}